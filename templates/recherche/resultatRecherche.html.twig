{% extends "bootstrap.html.twig" %}

{% block title %}Notre produit{% endblock %}

{% block body %}

<div class="container contour bg-light">
<h1 class="text-center display-5 text-capitalize">Détails de l'habitation</h1>

<div class="card mb-3 mt-5">
{% for value in habitation %}
    <img src="{{ asset(value.image) }}" class="card-img-top" alt="">
    
    <table class="table table-striped mt-4">
    
        <tr><th scope="col">Département : </th><td class="text-capitalize">{{ value.departement }}</td></tr>
        <tr><th scope="col">Type d'habitation : </th><td class="text-capitalize">{{ value.type }}</td></tr>
        <tr><th scope="col">Superficie : </th><td>{{ value.surface }} M²</td></tr>
        <tr><th scope="col">Prix : </th><td>{{ value.prix }} €</td></tr>
        <tr><th scope="col">Loyer : </th><td>{{ value.loyer }} €</td></tr>
        <tr><th scope="col">Rentabilité : </th><td>{{ value.rentabilite }} %</td></tr>
        {# <tr><th scope="col">Description : </th><td>Superbe appartement</td></tr> #}
    </table>
{% else %}
    <p>L'habitation correspondant à l'ID {{ id }} n'a pas été trouvée.</p>
{% endfor %}
</div>

    <div class="d-flex justify-content-center">
        <input type="submit" value="Nous contacter" class="btn bouton mb-5 col-4 fs-5">
    </div>

</div> <!-- Fin du container -->

{% endblock %}
